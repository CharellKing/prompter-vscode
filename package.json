{
  "name": "prompter-vscode",
  "displayName": "Prompter - Code Runner",
  "description": "A VSCode extension for editing and running code snippets, similar to Jupyter notebooks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:prompter.notebook.createNotebook",
    "onCommand:prompter.notebook.runCell",
    "onCommand:prompter.cell.insertCodeCellAbove",
    "onCommand:prompter.cell.insertCodeCellBelow",
    "onLanguage:prompt",
    "onNotebook:prompter-notebook",
    "onCommand:prompter.notebook.saveNotebook",
    "onCommand:prompter.llm.configureLLM",
    "onCommand:prompter.llm.openLLMConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Prompter",
      "properties": {
        "prompter.llmProvider": {
          "type": "string",
          "enum": [
            "openai",
            "deepseek",
            "qwen",
            "anthropic",
            "gemini",
            "mistral"
          ],
          "default": "openai",
          "description": "LLM provider to use for prompt cells"
        },
        "prompter.llmModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "LLM model to use for prompt cells"
        },
        "prompter.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "prompter.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "Deepseek API Key"
        },
        "prompter.qwenApiKey": {
          "type": "string",
          "default": "",
          "description": "Qwen API Key"
        },
        "prompter.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key"
        },
        "prompter.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key"
        },
        "prompter.mistralApiKey": {
          "type": "string",
          "default": "",
          "description": "Mistral API Key"
        },
        "prompter.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for LLM responses (0-2)"
        },
        "prompter.maxTokens": {
          "type": "number",
          "default": 1000,
          "minimum": 1,
          "description": "Maximum tokens for LLM responses"
        },
        "prompter.defaultCodeLanguage": {
          "type": "string",
          "enum": [
            "javascript",
            "typescript",
            "python",
            "java",
            "csharp",
            "cpp",
            "c",
            "go",
            "rust",
            "php",
            "ruby",
            "swift",
            "kotlin",
            "scala",
            "html",
            "css",
            "json",
            "xml",
            "yaml",
            "markdown",
            "bash",
            "powershell",
            "sql"
          ],
          "default": "javascript",
          "description": "Default language for new code cells"
        }
      }
    },
    "commands": [
      {
        "command": "prompter.cell.insertPromptCellAbove",
        "title": "Insert Prompt Cell Above",
        "category": "Prompter",
        "icon": "$(add)"
      },
      {
        "command": "prompter.cell.insertPromptCellBelow",
        "title": "Prompt",
        "category": "Prompter",
        "icon": "$(add)"
      },
      {
        "command": "prompter.cell.insertCodeCellBelow",
        "title": "Code",
        "category": "Prompter",
        "icon": "$(code)"
      },
      {
        "command": "prompter.cell.insertCodeCellAbove",
        "title": "Insert Code Cell Above",
        "category": "Prompter",
        "icon": "$(add)"
      },
      {
        "command": "prompter.notebook.createNotebook",
        "title": "Create New Prompter Notebook",
        "category": "Prompter"
      },
      {
        "command": "prompter.notebook.runCell",
        "title": "Run Cell",
        "category": "Prompter"
      },
      {
        "command": "prompter.notebook.runAllCells",
        "title": "Run All Cells",
        "category": "Prompter"
      },
      {
        "command": "prompter.llm.setProvider",
        "title": "Set LLM Provider",
        "category": "Prompter"
      },
      {
        "command": "prompter.llm.setApiKey",
        "title": "Set API Key for Current Provider",
        "category": "Prompter"
      },
      {
        "command": "prompter.llm.setModel",
        "title": "Set LLM Model",
        "category": "Prompter"
      },
      {
        "command": "prompter.notebook.saveNotebook",
        "title": "Save Notebook",
        "category": "Prompter"
      },
      {
        "command": "prompter.llm.configureLLM",
        "title": "Configure LLM Settings",
        "category": "Prompter"
      },
      {
        "command": "prompter.llm.openLLMConfig",
        "title": "Open LLM Configuration Page",
        "category": "Prompter",
        "icon": "$(settings-gear)"
      },
      {
        "command": "prompter.llm.llmConfigFocus",
        "title": "Focus LLM Configuration Panel",
        "category": "Prompter"
      },
      {
        "command": "prompter.language.setDefaultCodeLanguage",
        "title": "Set Default Code Language",
        "category": "Prompter",
        "icon": "$(code)"
      },
      {
        "command": "prompter.notebook.setCellType",
        "title": "Set Cell Type",
        "category": "Prompter",
        "icon": "$(symbol-class)"
      }
    ],
    "languages": [
      {
        "id": "prompter",
        "aliases": [
          "Prompter",
          "prompter"
        ],
        "extensions": [
          ".ppnb"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "prompt",
        "aliases": [
          "Prompt",
          "prompt",
          "AI Prompt"
        ],
        "extensions": [],
        "configuration": "./prompt-language-configuration.json",
        "mimetypes": [
          "text/x-prompt"
        ]
      }
    ],
    "grammars": [
      {
        "language": "prompter",
        "scopeName": "source.prompter",
        "path": "./syntaxes/prompter.tmLanguage.json"
      },
      {
        "language": "prompt",
        "scopeName": "text.prompt",
        "path": "./syntaxes/prompt.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "prompter.notebook.runCell",
        "key": "ctrl+enter",
        "when": "editorTextFocus && resourceExtname == '.ppnb'"
      },
      {
        "command": "prompter.notebook.runAllCells",
        "key": "ctrl+shift+enter",
        "when": "editorTextFocus && resourceExtname == '.ppnb'"
      }
    ],
    "notebooks": [
      {
        "type": "prompter-notebook",
        "displayName": "Prompter Notebook",
        "selector": [
          {
            "filenamePattern": "*.ppnb"
          }
        ]
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "prompter-panel",
          "title": "Prompter",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "prompter-panel": [
        {
          "id": "prompter.llmConfig",
          "name": "LLM Configuration",
          "type": "webview",
          "icon": "$(sparkle)",
          "when": "true"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == '.ppnb'",
          "command": "prompter.notebook.runCell",
          "group": "prompter"
        }
      ],
      "notebook/toolbar": [
        {
          "command": "prompter.cell.insertPromptCellBelow",
          "when": "notebookType == 'prompter-notebook'",
          "group": "navigation/add@-100"
        }
      ],
      "notebook/cell/title": [
        {
          "command": "prompter.notebook.setCellType",
          "when": "notebookType == 'prompter-notebook'",
          "group": "inline@1"
        }
      ],
      "notebook/cell/between": [
        {
          "command": "prompter.cell.insertPromptCellBelow",
          "when": "notebookType == 'prompter-notebook'",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/form-data": "^2.2.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "uuid": "^11.1.0"
  }
}
